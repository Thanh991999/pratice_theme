{% schema %}
{
  "name": "Address list",
  "settings": [
    {
      "type": "select",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "cs-background cs-background-2",
      "options": [
        {
          "value": "cs-accent cs-accent-1",
          "label": "Accent 1"
        },
        {
          "value": "cs-accent cs-accent-2",
          "label": "Accent 2"
        },
        {
          "value": "cs-background cs-background-1",
          "label": "Background 1"
        },
        {
          "value": "cs-background cs-background-2",
          "label": "Background 2"
        }
      ]
    },
    {
      "type": "header",
      "content": "content"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Heading"
    },
    {
      "type": "header",
      "content": "Image"
    },
    {
      "type": "image_picker",
      "label": "Image",
      "id": "image",
      "info": "1200 x 700px .png recommended."
    },
    {
      "type": "checkbox",
      "id": "enable_fluid",
      "label": "Enable full-width layout"
    },
    {
      "type": "header",
      "content": "layout"
    },
    {
      "type": "select",
      "id": "content_order",
      "label": "Content ordering",
      "default": "text",
      "options": [
        {
          "value": "text",
          "label": "Text first"
        },
        {
          "value": "image",
          "label": "Image first"
        }
      ]
    },
    {
      "type": "range",
      "id": "item_per_row",
      "min": 0,
      "max": 2,
      "step": 1,
      "label": "Items per row",
      "default": 1
    }
  ],
  "presets": [
    {
      "name": "Address List"
    }
  ]
}
{% endschema %}