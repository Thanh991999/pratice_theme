{% schema %}
{
  "name": "t:sections.featured_collection.name",
  "settings": [
    {
      "type": "header",
      "content": "t:general.settings.headers.header_content.content"
    },
    { 
      "type": "text",
      "id": "heading",
      "label": "t:general.settings.heading.label",
      "default" : "Featured collections"
    },
    {
      "type": "select",
      "id": "color_scheme",
      "label": "t:general.settings.color_scheme.label",
      "default": "cs-background cs-background-1",
      "options": [
        {
          "value": "cs-accent cs-accent-1",
          "label": "t:settings_schema.colors.settings.colors_accent_1.label"
        },
        {
          "value": "cs-accent cs-accent-2",
          "label": "t:settings_schema.colors.settings.colors_accent_2.label"
        },
        {
          "value": "cs-background cs-background-1",
          "label": "t:settings_schema.colors.settings.colors_background_1.label"
        },
        {
          "value": "cs-background cs-background-2",
          "label": "t:settings_schema.colors.settings.colors_background_2.label"
        }
      ]
    },
    {
      "type": "header",
      "content": "t:general.settings.headers.header_layout.content"
    },
    {
      "type": "range",
      "id": "product_to_show",
      "label": "t:sections.featured_collection.settings.product_to_show.label",
      "min": 1,
      "max": 12,
      "step": 1,
      "default": 4
    },
    {
      "type": "range",
      "id": "product_per_show",
      "label": "t:sections.featured_collection.settings.product_per_show.label",
      "min": 1,
      "max": 6,
      "step": 1,
      "default": 4
    },
    {
      "type": "header",
      "content": "t:general.settings.headers.header_mobile_layout.content"
    },
    {
      "type": "checkbox",
      "id": "show_products_mobile",
      "label": "t:sections.featured_collection.settings.show_2_products_per_show.label",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "enable_carousel",
      "label": "t:general.settings.enable_carousel.label",
      "default": false
    },
    {
      "type": "header",
      "content": "t:general.settings.headers.header_button.content"
    },
    {
      "type": "checkbox",
      "id": "enable_view_more",
      "label": "t:sections.featured_collection.settings.enable_view_more.label",
      "default": false,
      "info": "t:sections.featured_collection.settings.enable_view_more.info"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "t:settings_schema.colors.settings.colors_button_text.label",
      "default": "View collection"
    }
  ],
  "blocks": [
    {
      "type": "collection",
      "name": "t:sections.featured_collection.blocks.collection.name",
      "limit": 6,
      "settings": [
        {
          "type": "collection",
          "id": "collection",
          "label": "t:sections.featured_collection.blocks.collection.settings.collection.label"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "t:general.settings.heading.label",
          "info": "t:sections.featured_collection.blocks.collection.settings.heading.info"
        }
      ]
    }
  ],
  "presets":[
    {
      "name" : "t:sections.featured_collection.name",
      "blocks": [
        {
          "type": "collection"
        }
      ] 
    }
  ]
}
{% endschema %}