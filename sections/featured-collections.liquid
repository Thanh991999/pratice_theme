{% schema %}
{
  "name" : "Featured collections",
  "settings": [
    {
      "type": "header",
      "content": "content"
    },
    { 
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default" : "Featured collections"
    },
    {
      "type": "select",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "cs-background cs-background-1",
      "options": [
        {
          "value": "cs-accent cs-accent-1",
          "label": "Accent 1"
        },
        {
          "value": "cs-accent cs-accent-2",
          "label": "Accent 2"
        },
        {
          "value": "cs-background cs-background-1",
          "label" : "Background 1"
        },
        {
          "value": "cs-background cs-background-2",
          "label" : "Background 2"
        }
      ]
    },
    {
      "type": "header",
      "content": "layout"
    },
    {
      "type": "range",
      "label": "Products to show",
      "id": "products_to_show",
      "min": 1,
      "max": 12,
      "step": 1,
      "default": 4
    },
    {
      "type": "range",
      "label": "Product per row",
      "id": "products_per_show",
      "min": 1,
      "max": 6,
      "step": 1,
      "default": 4
    },
    {
      "type": "header",
      "content": "mobile layout"
    },
    {
      "type": "checkbox",
      "id": "show_products_mobile",
      "label": "Show 2 products per row",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "enable_carousel",
      "label": "Enable carousel",
      "default": false
    },
    {
      "type": "header",
      "content": "button"
    },
    {
      "type": "checkbox",
      "id": "enable_view_more",
      "label": "Enable \"View more\" button",
      "default": false,
      "info": "Appears if collection has more products than shown."
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button text",
      "default": "View collection"
    }
  ],
  "blocks": [
    {
      "type": "collection",
      "name": "Collection",
      "limit": 6,
      "settings": [
        {
          "type": "collection",
          "id": "collection",
          "label": "Collection"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "info": "If none is set, collection title is used."
        }
      ]
    }
  ],
  "presets":[
    {
      "name" : "Featured collections",
      "blocks": [
        {
          "type": "collection"
        }
      ] 
    }
  ]
}
{% endschema %}