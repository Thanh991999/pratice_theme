{% schema %}
{
  "name": "Video banner",
  "settings": [
    {
      "type": "select",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "cs-accent cs-accent-1",
      "options": [
        {
          "value": "cs-accent cs-accent-1",
          "label": "Accent 1"
        },
        {
          "value": "cs-accent cs-accent-2",
          "label": "Accent 2"
        },
        {
          "value": "cs-background cs-background-1",
          "label": "Background 1"
        },
        {
          "value": "cs-background cs-background-2",
          "label": "Background 2"
        }
      ]
    },
    {
      "type": "header",
      "content": "content"
    },
    {
      "type": "checkbox",
      "id": "enable_large_heading",
      "label": "Enable large heading"
    },
    {
      "type": "text",
      "label": "Heading",
      "default": "Welcome to our store",
      "id": "heading"
    },
    {
      "type": "text",
      "label": "Subheading",
      "default": "Banner title",
      "id": "sub_heading"
    },
    {
      "type": "richtext",
      "label": "Description",
      "id": "description"
    },
    {
      "type": "select",
      "label": "Content position",
      "id": "content_position",
      "options": [
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "left_center",
          "label": "Left center"
        },
        {
          "value": "left_bottom",
          "label": "Left bottom "
        }

      ],
      "default": "center"
    },
    {
      "type": "checkbox",
      "id": "show_content_background",
      "label": "Show content background"
    },
    {
      "type": "header",
      "content": "background"
    },
    {
      "type": "select",
      "label": "Height",
      "id": "height",
      "options": [
        {
          "value": "50",
          "label": "50% screen height"
        },
        {
          "value": "70",
          "label": "70% screen height"
        },
        {
          "value": "100",
          "label": "100% screen height"
        }
      ],
      "default": "70"
    },
    {
      "type": "video_url",
      "id": "video_url",
      "accept": [
        "youtube",
        "vimeo"
      ],
      "default": "https://www.youtube.com/watch?v=_9VUPq3SxOc",
      "label": "Banner video link",
      "placeholder": "Enter video link",
      "info": "Accepts YouTube or Vimeo links"
    },
    {
      "type": "checkbox",
      "id": "show_scroll_indicator",
      "label": "Show scroll indicator",
      "info": "Useful when the banner is a full screen height hero section"
    },
    {
      "type": "range",
      "unit": "%",
      "max": 100,
      "min": 0,
      "step": 1,
      "default": 30,
      "id": "overlay_opacity",
      "label": "Overlay opacity"
    },
    {
      "type": "header",
      "content": "button"
    },
    {
      "type": "text",
      "id": "primary_btn_label",
      "label": "Primary button label",
      "default": "Check now"
    },
    {
      "type": "url",
      "id": "primary_button_link",
      "label": "Primary button link"
    },
    {
      "type": "text",
      "id": "secondary_btn_label",
      "label": "Secondary button label",
      "default": "View details"
    },
    {
      "type": "url",
      "id": "secondary_button_link",
      "label": "Secondary link"
    }

  ],
  "presets": [
    {
      "name": "Video Banner"
    }
  ]
}
{% endschema %}