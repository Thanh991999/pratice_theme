{% schema %}
{
  "name": "t:sections.collection_list.name",
  "settings": [
    {
      "type": "header",
      "content": "t:general.settings.headers.header_content.content"
    },
    { 
      "type": "text",
      "id": "heading",
      "label": "t:general.settings.heading.label",
      "default" : "Our Collections"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "t:general.settings.description.label"
    },
    {
      "type": "select",
      "id": "color_scheme",
      "label": "t:general.settings.color_scheme.label",
      "default": "cs-background cs-background-1",
      "options": [
        {
          "value": "cs-accent cs-accent-1",
          "label": "t:settings_schema.colors.settings.colors_accent_1.label"
        },
        {
          "value": "cs-accent cs-accent-2",
          "label": "t:settings_schema.colors.settings.colors_accent_2.label"
        },
        {
          "value": "cs-background cs-background-1",
          "label": "t:settings_schema.colors.settings.colors_background_1.label"
        },
        {
          "value": "cs-background cs-background-2",
          "label": "t:settings_schema.colors.settings.colors_background_2.label"
        }
      ]
    },
    {
      "type": "checkbox",
      "id": "enable_view_more",
      "label": "t:sections.collection_list.settings.enable_view_all_collections.label",
      "info": "t:sections.collection_list.settings.enable_view_all_collections.info",
      "default": false
    },
    { 
      "type": "text",
      "id": "button_text",
      "label": "t:settings_schema.colors.settings.colors_button_text.label",
      "default" : "View all collections"
    },
    {
      "type": "header",
      "content": "t:sections.collection_list.settings.headers.collection_items.content"
    },
    {
      "type": "select",
      "id": "content_alignment",
      "label": "t:general.settings.content_alignment.label",
      "default": "center",
      "options":[
        {
          "value": "center",
          "label": "t:general.settings.content_alignment.options.option_center.label"
        },
        {
          "value": "left",
          "label": "t:general.settings.content_alignment.options.option_left.label"
        }
      ]
    },
    {
      "type": "select",
      "id": "image_ratio",
      "label": "t:general.settings.image_ratio.label",
      "default": "square",
      "options":[
        {
          "value": "square",
          "label": "t:general.settings.image_ratio.options.option_square.label"
        },
        {
          "value": "landscape",
          "label": "t:general.settings.image_ratio.options.option_landscape.label"
        },
        {
          "value": "portrait",
          "label": "t:general.settings.image_ratio.options.option_portrait.label"
        }
      ]
    },
    {
      "type": "range",
      "id": "collection_per_row",
      "label": "t:sections.collection_list.settings.collection_per_row.label",
      "min": 1,
      "max": 6,
      "step": 1,
      "default": 4
    },
    {
      "type": "checkbox",
      "id": "show_product_count",
      "label": "t:sections.collection_list.settings.show_product_count.label",
      "default": false
    },
    {
      "type": "header",
      "content": "t:general.settings.headers.header_mobile_layout.content"
    },
    {
      "type": "checkbox",
      "id": "show_columns_mobile",
      "label": "t:sections.collection_list.settings.show_product_count.label",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "enable_carousel",
      "label": "t:general.settings.enable_carousel.label",
      "default": false
    }
  ],
  "presets": [
    {
      "name": "t:sections.collection_list.name"
    }
  ]
}
{% endschema %}
