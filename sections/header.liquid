

{% schema %}
{
  "name": "t:sections.header.name",
  "settings":[
    {
      "type": "select",
      "id": "color_scheme",
      "label": "t:general.settings.color_scheme.label",
      "default": "cs-accent cs-accent-1",
      "options": [
        {
          "value": "cs-accent cs-accent-1",
          "label": "t:settings_schema.colors.settings.colors_accent_1.label"
        },
        {
          "value": "cs-accent cs-accent-2",
          "label": "t:settings_schema.colors.settings.colors_accent_2.label"
        },
        {
          "value": "cs-background cs-background-1",
          "label": "t:settings_schema.colors.settings.colors_background_1.label"
        },
        {
          "value": "cs-background cs-background-2",
          "label": "t:settings_schema.colors.settings.colors_background_2.label"
        }
      ]
    },
    {
      "type": "header",
      "content": "t:general.settings.headers.header_general.content"
    },
    {
      "type": "checkbox",
      "id": "enable_full_width_content",
      "label": "t:general.settings.enable_full_width_content.label",
      "default": false
    },
    {
      "type": "header",
      "content": "t:sections.header.settings.headers.header_logo.content"
    },
    {
      "type": "image_picker",
      "id": "logo",
      "label": "t:sections.header.settings.logo_image.label",
      "info": "t:sections.header.settings.logo_image.info"
    },
    {
      "type": "range",
      "id": "logo_width",
      "label": "t:general.settings.logo_max_width.label",
      "min": 50,
      "max": 300,
      "step": 10,
      "default": 160,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "logo_width_mobile",
      "label": "t:sections.header.settings.logo_max_width_on_mobile.label",
      "min": 50,
      "max": 200,
      "step": 10,
      "default": 120,
      "unit": "px"
    },
    {
      "type": "select",
      "id": "menu_style",
      "options": [
        {
          "value": "left_left",
          "label": "t:sections.header.settings.menu_style_on_large_screens.options.left_left.label"
        },
        {
          "value": "center_below",
          "label": "t:sections.header.settings.menu_style_on_large_screens.options.center_below.label"
        },
        {
          "value": "left_below",
          "label": "t:sections.header.settings.menu_style_on_large_screens.options.left_below.label"
        },
        {
          "value": "left_center",
          "label": "t:sections.header.settings.menu_style_on_large_screens.options.left_center.label"
        }
      ],
      "default": "left_left",
      "label": "t:sections.header.settings.menu_style_on_large_screens.label"
    },
    {
      "type": "checkbox",
      "id": "enable_sticky_header",
      "label": "t:sections.header.settings.enable_sticky_header.label",
      "info": "t:sections.header.settings.enable_sticky_header.info",
      "default": true
    },
    {
      "type": "header",
      "content": "t:general.settings.headers.header_navigation.content"
    },
    {
      "type": "link_list",
      "id": "menu",
      "label": "t:general.settings.menu.label"
    },
    {
      "type": "header",
      "content": "t:sections.header.settings.headers.header_collection_browsing.content",
      "info": "t:sections.header.settings.headers.header_collection_browsing.info"
    },
    {
      "type": "checkbox",
      "id": "enable_browsing_menu",
      "label": "t:sections.header.settings.enable_browsing_menu.label",
      "default": true
    },
    {
      "type": "text",
      "id": "heading",
      "label": "t:general.settings.heading.label",
      "default": "Shop"
    },
    {
      "type": "collection_list",
      "id": "collection_list",
      "label": "t:general.settings.selected_collections.label"
    }
  ],
  "blocks": [
    {
      "name": "t:sections.header.blocks.mega_menu.name",
      "type": "mega_menu",
      "settings": [
        {
          "type": "paragraph",
          "content": "t:sections.header.blocks.mega_menu.settings.paragraph.content"
        },
        {
          "type": "text",
          "id": "menu_item_name",
          "label": "t:sections.header.blocks.mega_menu.settings.menu_item_name.label",
          "default": "Women",
          "info": "t:sections.header.blocks.mega_menu.settings.menu_item_name.info"
        },
        {
          "type": "header",
          "content": "t:sections.header.blocks.mega_menu.settings.headers.promotional_content_1.content"
        },
        {
          "type": "image_picker",
          "id": "primary_image",
          "label": "t:general.settings.image.label",
          "info": "t:sections.header.blocks.mega_menu.settings.image.info"
        },
        {
          "type": "range",
          "id": "primary_overlay_opacity",
          "label": "t:general.settings.overlay_opacity.label",
          "min": 0,
          "max": 100,
          "default": 30,
          "step": 1,
          "unit": "%"
        },
        {
          "type": "text",
          "id": "primary_heading",
          "label": "t:general.settings.heading.label",
          "default": "Heading"
        },
        {
          "type": "url",
          "id": "primary_header_link",
          "label": "t:general.settings.link.label"
        },
        {
          "type": "header",
          "content": "t:sections.header.blocks.mega_menu.settings.headers.promotional_content_2.content"
        },
        {
          "type": "image_picker",
          "id": "secondary_image",
          "label": "t:general.settings.image.label",
          "info": "t:sections.header.blocks.mega_menu.settings.image.info"
        },
        {
          "type": "range",
          "id": "secondary_overlay_opacity",
          "label": "t:general.settings.overlay_opacity.label",
          "min": 0,
          "max": 100,
          "default": 30,
          "step": 1,
          "unit": "%"
        },
        {
          "type": "text",
          "id": "secondary_heading",
          "label": "t:general.settings.heading.label",
          "default": "Heading"
        },
        {
          "type": "url",
          "id": "secondary_header_link",
          "label": "t:general.settings.link.label"
        }
      ]
    }
  ]
}
{% endschema %}