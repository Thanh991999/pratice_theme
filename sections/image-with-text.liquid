{% schema %}
{
  "name" : "Image with text",
  "settings": [
    {
      "type": "header",
      "content": "image"
    },
    {
      "type": "image_picker",
      "id": "image_first",
      "label": "Primary Image",
      "info": "700 x 500px .png recommended."
    },
    {
      "type": "select",
      "id": "image_ratio_first",
      "label": "Primary image ratio",
      "default": "portrait",
      "options":[
        {
          "value": "adapt-to-image",
          "label": "Adapt to image"
        },
        {
          "value": "square",
          "label": "Square"
        },
        {
          "value": "landscape",
          "label": "Landscape (3:2)"
        },
        {
          "value": "portrait",
          "label": "Portrait (2:3)"
        }
      ]
    },
    {
      "type": "image_picker",
      "id": "image_second",
      "label": "Secondary Image",
      "info": "250 x 250px .png recommended."
    },
    {
      "type": "select",
      "id": "image_ratio_second",
      "label": "Secondary image ratio",
      "default": "square",
      "options":[
        {
          "value": "adapt-to-image",
          "label": "Adapt to image"
        },
        {
          "value": "square",
          "label": "Square"
        },
        {
          "value": "landscape",
          "label": "Landscape (3:2)"
        },
        {
          "value": "portrait",
          "label": "Portrait (2:3)"
        }
      ]
    },
    {
      "type": "select",
      "id": "image_container_width",
      "label": "Image container width",
      "default": "60%",
      "options":[
        {
          "value": "60%",
          "label": "60%"
        },
        {
          "value": "50%",
          "label": "50%"
        }
      ]
    },
    {
      "type": "checkbox",
      "id": "enable_full_width",
      "label": "Enable full-width layout",
      "default": false
    },
    {
      "type": "header",
      "content": "content"
    },
    {
      "type": "checkbox",
      "id": "enable_large_heading",
      "label": "Enable large heading",
      "default": false
    },
    {
      "type": "select",
      "id": "content_alignment",
      "label": "Content alignment",
      "default": "left",
      "options":[
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "right",
          "label": "Right"
        },
        {
          "value": "center",
          "label": "Center"
        }
      ]
    },
    { 
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default" : "Heading"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Description"
    },
    {
      "type": "header",
      "content": "layout"
    },
    {
      "type": "select",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "cs-background cs-background-1",
      "options": [
        {
          "value": "cs-accent cs-accent-1",
          "label": "Accent 1"
        },
        {
          "value": "cs-accent cs-accent-2",
          "label": "Accent 2"
        },
        {
          "value": "cs-background cs-background-1",
          "label" : "Background 1"
        },
        {
          "value": "cs-background cs-background-2",
          "label" : "Background 2"
        }
      ]
    },
    {
      "type": "select",
      "id": "content_ordering",
      "label": "Content ordering",
      "default": "image-first",
      "options": [
        {
          "value": "text-first",
          "label": "Text first"
        },
        {
          "value": "image-first",
          "label": "Image first"
        }
      ]
    },
    {
      "type": "header",
      "content": "button"
    },
    { 
      "type": "text",
      "id": "button_label_first",
      "label": "Primary button label",
      "default" : "Check now"
    },
    {
      "type": "url",
      "id": "button_link_first",
      "label": "Primary button link"
    },
    { 
      "type": "text",
      "id": "button_label_second",
      "label": "Secondary button label",
      "default" : "View details"
    },
    {
      "type": "url",
      "id": "button_link_second",
      "label": "Secondary link"
    }
  ],
  "presets": [
    {
      "name": "Image with text"
    }
  ]
}
{% endschema %}
