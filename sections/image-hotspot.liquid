{% schema %}
{
  "name" : "t:sections.image_hotspot.name",
  "settings" : [
    {
      "type": "select",
      "id": "color_scheme",
      "label": "t:general.settings.color_scheme.label",
      "default": "cs-accent cs-accent-1",
      "options": [
        {
          "value": "cs-accent cs-accent-1",
          "label": "t:settings_schema.colors.settings.colors_accent_1.label"
        },
        {
          "value": "cs-accent cs-accent-2",
          "label": "t:settings_schema.colors.settings.colors_accent_2.label"
        },
        {
          "value": "cs-background cs-background-1",
          "label": "t:settings_schema.colors.settings.colors_background_1.label"
        },
        {
          "value": "cs-background cs-background-2",
          "label": "t:settings_schema.colors.settings.colors_background_2.label"
        }
      ]
    },
    {
      "type": "header",
      "content": "t:general.settings.headers.header_image.content"
    },
    {
      "type": "select",
      "id": "height",
      "label": "t:general.settings.height.label",
      "default": "50",
      "options": [
        {
          "value": "50",
          "label": "t:general.settings.height.options.option_50.label"
        },
        {
          "value": "70",
          "label": "t:general.settings.height.options.option_70.label"
        },
        {
          "value": "100",
          "label": "t:general.settings.height.options.option_100.label"
        }
      ]
    },
    {
      "type": "image_picker",
      "id": "select_image",
      "label": "t:sections.image_hotspot.settings.select_image.label",
      "info": "t:sections.image_hotspot.settings.select_image.info"
    },
    {
      "type": "checkbox",
      "id": "enable_full_width_layout",
      "label": "t:sections.image_hotspot.settings.enable_full_width_layout.label",
      "default": false
    },
    {
      "type": "header",
      "content": "t:general.settings.headers.header_content.content"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "t:general.settings.heading.label",
      "default" : "Heading"
    },
    {
      "type": "select",
      "id": "content_alignment",
      "label": "t:sections.image_hotspot.settings.touchable_dot_style.label",
      "default": "reverse",
      "options":[
        {
          "value": "reverse",
          "label": "t:sections.image_hotspot.settings.touchable_dot_style.options.option_reverse.label"
        },
        {
          "value": "normal",
          "label": "t:sections.image_hotspot.settings.touchable_dot_style.options.option_normal.label"
        }
      ]
    },
    {
      "type": "header",
      "content": "t:sections.image_hotspot.settings.headers.header_preview_products.content"
    },
    {
      "type": "checkbox",
      "id": "show_second_image_on_hover",
      "label": "t:general.settings.show_second_image_on_hover.label",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_product_vendor",
      "label": "t:settings_schema.cart.settings.show_product_vendor",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_color_swatches",
      "label": "t:general.settings.show_color_swatches.label",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_sale_badge",
      "label": "t:general.settings.show_sale_badge.label",
      "default": true
    }
  ],
  "blocks": [
    {
      "type": "item",
      "name": "t:sections.image_hotspot.blocks.hotspot_item.name",
      "limit": 3,
      "settings": [
        {
          "type": "product",
          "id": "product",
          "label": "t:sections.image_hotspot.blocks.hotspot_item.settings.product.label"
        },
        {
          "type": "range",
          "id": "top_offset",
          "label": "t:sections.image_hotspot.blocks.hotspot_item.settings.top_offset.label",
          "min": 0,
          "max": 100,
          "default": 30,
          "unit": "%"
        },
        {
          "type": "range",
          "id": "left_offset",
          "label": "t:sections.image_hotspot.blocks.hotspot_item.settings.left_offset.label",
          "min": 0,
          "max": 100,
          "default": 25,
          "unit": "%"
        }
      ]
    }
  ],
  "presets": [
    {
      "name" : "t:sections.image_hotspot.name"
    }
  ]
}
{% endschema %}
