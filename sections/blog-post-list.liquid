{% schema %}
{
  "name": "t:sections.blog_posts.name",
  "settings": [
    {
      "type": "select",
      "id": "color_scheme",
      "label": "t:general.settings.color_scheme.label",
      "default": "cs-background cs-background-1",
      "options": [
        {
          "value": "cs-accent cs-accent-1",
          "label": "t:settings_schema.colors.settings.colors_accent_1.label"
        },
        {
          "value": "cs-accent cs-accent-2",
          "label": "t:settings_schema.colors.settings.colors_accent_2.label"
        },
        {
          "value": "cs-background cs-background-1",
          "label": "t:settings_schema.colors.settings.colors_background_1.label"
        },
        {
          "value": "cs-background cs-background-2",
          "label": "t:settings_schema.colors.settings.colors_background_2.label"
        }
      ]
    },
    {
      "type": "header",
      "content": "t:general.settings.headers.header_content.content"
    },
    {
      "type": "text",
      "label": "t:general.settings.heading.label",
      "id": "heading"
    },
    {
      "type": "blog",
      "id": "blog",
      "label": "t:sections.blog_posts.settings.blog.label"
    },
    { 
      "type":"header",
      "content": "t:general.settings.headers.header_layout.content"
    },
    {
      "type": "select",
      "id": "image_ratio",
      "label": "t:general.settings.image_ratio.label",
      "default": "landscape",
      "options": [
        {
          "value": "square",
          "label": "t:general.settings.image_ratio.options.option_square.label"
        },
        {
          "value": "portrait",
          "label": "t:general.settings.image_ratio.options.option_landscape.label"
        },
        {
          "value": "landscape",
          "label": "t:general.settings.image_ratio.options.option_portrait.label"
        }
      ]
    },
    {
      "type": "checkbox",
      "id": "show_featured_image",
      "label": "t:settings_schema.article_cards.settings.show_featured_image.label"
    },
    {
      "type": "checkbox",
      "id": "show_blog_tag",
      "label": "t:sections.blog_posts.settings.show_blog_tag.label"
    },
    {
      "type": "checkbox",
      "id": "checkbox_show_image",
      "label": "t:sections.blog_posts.settings.show_excerpt.label",
      "info": "t:sections.blog_posts.settings.show_excerpt.info"
    },
    {
      "type": "checkbox",
      "id": "show_published_date",
      "label": "t:sections.blog_posts.settings.show_published_date.label"
    },
    {
      "type": "checkbox",
      "id": "show_author",
      "label": "t:sections.blog_posts.settings.show_author.label"
    },
    {
      "type": "header",
      "content": "t:general.settings.headers.header_button.content"
    },
    {
      "type": "checkbox",
      "id": "show_view_all",
      "label": "t:sections.blog_posts.settings.show_view_all.label"
    },
    {
      "type": "text",
      "id": "btn_text",
      "label": "t:settings_schema.colors.settings.colors_button_text.label"
    },
    {
      "type": "header",
      "content": "t:general.settings.headers.header_layout.content"
    },
    {
      "type": "range",
      "id": "item_per_row",
      "min": 1,
      "max": 6,
      "step": 1,
      "label": "t:general.settings.item_per_row.label",
      "default": 3
    },
    {
      "type": "range",
      "id": "item_to_show",
      "min": 1,
      "max": 8,
      "step": 1,
      "label": "t:sections.blog_posts.settings.max_items_to_show.label",
      "default": 3,
      "info": "t:sections.blog_posts.settings.max_items_to_show.info"
    },
    {
      "type": "checkbox",
      "id": "enable_carousel",
      "label": "t:general.settings.enable_carousel.label"
    }
  ],
  "presets": [
    {
      "name": "t:sections.blog_posts.name"
    }
  ]
}
{% endschema %}