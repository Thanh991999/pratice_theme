{% schema %}
{
  "name": "t:sections.brand_list.name",
  "settings": [
    {
      "type": "select",
      "id": "color_scheme",
      "label": "t:general.settings.color_scheme.label",
      "default": "cs-accent cs-accent-1",
      "options": [
        {
          "value": "cs-accent cs-accent-1",
          "label": "t:settings_schema.colors.settings.colors_accent_1.label"
        },
        {
          "value": "cs-accent cs-accent-2",
          "label": "t:settings_schema.colors.settings.colors_accent_2.label"
        },
        {
          "value": "cs-background cs-background-1",
          "label": "t:settings_schema.colors.settings.colors_background_1.label"
        },
        {
          "value": "cs-background cs-background-2",
          "label": "t:settings_schema.colors.settings.colors_background_2.label"
        }
      ]
    },
    {
      "type": "text",
      "label": "t:general.settings.heading.label",
      "id": "heading"
    },
    { 
      "type":"header",
      "content": "t:general.settings.headers.header_layout.content"
    },
    {
      "type": "range",
      "id": "logo_width",
      "min": 60,
      "max": 180,
      "step": 2,
      "label": "t:sections.brand_list.settings.logo_max_width.label",
      "default": 90,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "space_items",
      "min": 4,
      "max": 40,
      "step": 1,
      "label": "t:sections.brand_list.settings.space_between_items.label",
      "default": 16,
      "unit": "px"
    },
    { 
      "type":"header",
      "content": "t:general.settings.headers.header_mobile_layout.content"
    },
    {
      "type": "range",
      "id": "item_per_row",
      "min": 2,
      "max": 4,
      "step": 1,
      "label": "t:sections.brand_list.settings.logo_per_row.label",
      "default": 3
    }
  ],
  "blocks": [
    {
      "name": "Logo",
      "type": "image",
      "settings": [
        {
          "type": "image_picker",
          "label": "t:sections.brand_list.blocks.logo.settings.image.label",
          "id": "logo",
          "info": "t:sections.brand_list.blocks.logo.settings.image.info"

        },
        {
          "type": "url",
          "label": "t:general.settings.link.label",
          "id": "logo_link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "t:sections.brand_list.name"
    }
  ]
}
{% endschema %}