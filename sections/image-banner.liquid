{% schema %}
{
  "name": "t:sections.image_banner.name",
  "settings": [
    {
      "type": "select",
      "id": "color_scheme",
      "label": "t:general.settings.color_scheme.label",
      "default": "cs-accent cs-accent-1",
      "options": [
        {
          "value": "cs-accent cs-accent-1",
          "label": "t:settings_schema.colors.settings.colors_accent_1.label"
        },
        {
          "value": "cs-accent cs-accent-2",
          "label": "t:settings_schema.colors.settings.colors_accent_2.label"
        },
        {
          "value": "cs-background cs-background-1",
          "label": "t:settings_schema.colors.settings.colors_background_1.label"
        },
        {
          "value": "cs-background cs-background-2",
          "label": "t:settings_schema.colors.settings.colors_background_2.label"
        }
      ]
    },
    {
      "type": "header",
      "content": "t:general.settings.headers.header_content.content"
    },
    {
      "type": "checkbox",
      "id": "enable_large_heading",
      "label": "t:general.settings.enable_large_heading.label"
    },
    {
      "type": "text",
      "label": "t:general.settings.heading.label",
      "default": "Welcome to our store",
      "id": "heading"
    },
    {
      "type": "text",
      "label": "t:general.settings.subheading.label",
      "default": "Banner title",
      "id": "sub_heading"
    },
    {
      "type": "richtext",
      "label": "t:general.settings.description.label",
      "id": "description"
    },
    {
      "type": "select",
      "label": "t:general.settings.content_position.label",
      "id": "content_position",
      "options": [
        {
          "value": "center",
          "label": "t:general.settings.content_position.options.option_center.label"
        },
        {
          "value": "left_center",
          "label": "t:general.settings.content_position.options.option_left_center.label"
        },
        {
          "value": "left_bottom",
          "label": "t:general.settings.content_position.options.option_bottom_left.label"
        }

      ],
      "default": "center"
    },
    {
      "type": "checkbox",
      "id": "show_content_background",
      "label": "t:general.settings.show_content_background.label"
    },
    {
      "type": "header",
      "content": "t:general.settings.headers.header_background.content"
    },
    {
      "type": "image_picker",
      "label": "t:general.settings.desktop_background_image.label",
      "id": "desktop_background_img",
      "info": "t:general.settings.desktop_background_image.info"
    },
    {
      "type": "image_picker",
      "label": "t:general.settings.mobile_background_image.label",
      "id": "mobile_background_img",
      "info": "t:general.settings.mobile_background_image.info"
    },
    {
      "type": "select",
      "label": "t:general.settings.height.label",
      "id": "height",
      "options": [
        {
          "value": "50",
          "label": "t:general.settings.height.options.option_50.label"
        },
        {
          "value": "70",
          "label": "t:general.settings.height.options.option_70.label"
        },
        {
          "value": "100",
          "label": "t:general.settings.height.options.option_100.label"
        }
      ],
      "default": "70"
    },
    {
      "type": "checkbox",
      "id": "show_scroll_indicator",
      "label": "t:general.settings.show_scroll_indicator.label",
      "info": "t:general.settings.show_scroll_indicator.info"
    },
    {
      "type": "range",
      "unit": "%",
      "max": 100,
      "min": 0,
      "step": 1,
      "default": 30,
      "id": "overlay_opacity",
      "label": "t:general.settings.overlay_opacity.label"
    },
    {
      "type": "header",
      "content": "t:general.settings.headers.header_button.content"
    },
    {
      "type": "text",
      "id": "primary_btn_label",
      "label": "t:general.settings.primary_button_label.label",
      "default": "Check now"
    },
    {
      "type": "url",
      "id": "primary_btn_link",
      "label": "t:general.settings.primary_button_link.label"
    },
    {
      "type": "text",
      "id": "secondary_btn_label",
      "label": "t:general.settings.secondary_button_label.label",
      "default": "View details"
    },
    {
      "type": "url",
      "id": "secondary_btn_link",
      "label": "t:general.settings.secondary_button_link.label"
    }

  ],
  "presets": [
    {
      "name": "t:sections.image_banner.name"
    }
  ]
}
{% endschema %}