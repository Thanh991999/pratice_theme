{% schema %}
{
  "name": "t:sections.text.name",
  "settings": [
    {
      "type": "select",
      "id": "color_scheme",
      "label": "t:general.settings.color_scheme.label",
      "default": "cs-background cs-background-1",
      "options": [
        {
          "value": "cs-accent cs-accent-1",
          "label": "t:settings_schema.colors.settings.colors_accent_1.label"
        },
        {
          "value": "cs-accent cs-accent-2",
          "label": "t:settings_schema.colors.settings.colors_accent_2.label"
        },
        {
          "value": "cs-background cs-background-1",
          "label": "t:settings_schema.colors.settings.colors_background_1.label"
        },
        {
          "value": "cs-background cs-background-2",
          "label": "t:settings_schema.colors.settings.colors_background_2.label"
        }
      ]
    },
    {
      "type": "header",
      "content": "t:general.settings.headers.header_content.content"
    },
    { 
      "type": "text",
      "id": "heading",
      "label": "t:general.settings.heading.label",
      "default": "Section title"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "t:general.settings.text.label",
      "default": "<p>Use this text to share information about your brand with your customers. Describe a product, share announcements, or welcome customers to your store.</p>"
    },
    {
      "type": "header",
      "content": "t:general.settings.headers.header_button.content"
    },
    {
      "type": "text",
      "id": "primary_button_label",
      "label": "t:general.settings.primary_button_label.label",
      "default": "Check now"
    },  
    {
      "type": "url",
      "id": "primary_button_link",
      "label": "t:general.settings.primary_button_link.label"
    },
    {
      "type": "text",
      "id": "secondary_button_label",
      "label": "t:general.settings.secondary_button_label.label",
      "default": "View details"
    }, 
    {
      "type": "url",
      "id": "secondary_button_link",
      "label": "t:general.settings.secondary_button_link.label"
    }
  ],
  "presets": [
    {
      "name": "t:sections.text.name"
    }
  ]
}
{% endschema %}
