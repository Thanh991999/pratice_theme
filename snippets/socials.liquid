
{%- liquid
assign tabindex = ''
if unclickable
  assign tabindex = 'tabindex="-1"'
endif
-%}
<ul class="{{ class }} social__list ls-none d-flex fw-wrap hide-empty">
  {%- if settings.social_facebook_link != blank -%}
    <li class="social__item">
      <a href="{{ settings.social_facebook_link }}" rel="noopener" aria-label="Facebook" class="button button--icon button--large js-social-button {{ button }}" >
      {% render 'icon-facebook' %}
    </a>
    </li>
  {%- endif -%}
  {%- if settings.social_twitter_link != blank -%}
    <li class="social__item">
    <a href="{{ settings.social_twitter_link }}" rel="noopener" {{ tabindex }} title="Twitter" aria-label="Twitter" class="button button--icon button--large js-social-button {{ button }}">
      {% render 'icon-twitter' %}
    </a>
    </li>
