<sht-cart-notification-panel id="cartNotificationPanel" class="cart-notification p-fixed zi-7 no-focus-visible" tabindex="-1" hidden="true">
    <div data-type="cart-notification-panel-wrapper" class="js-cart-notification-panel-wrapper p-relative" >
      <div
        class="focus-inset js-cart-notification-panel-container"
        aria-modal="true"
        aria-label="{{ 'general.cart.item_added' | t }}"
        role="dialog"
        tabindex="-1"
      >
        <div class="cart-notification__header d-flex middle-xs between-xs mb-24">
          <p class="cart-notification__heading m-zero d-flex middle-xs ">
            <span class="icon icon--small button--icon bs-none color-accent-2 flx-auto mr-8">
              {%- render 'icon-check-mark', size: 16 -%}
            </span>
            {{ "general.cart.success_message" | t }}
          </p>
          <button type="button" class="button button--icon button--small button--secondary cart-notification__close modal__close-button js-cart-notification-panel-close-btn" aria-label="{{ 'accessibility.close' | t }}" >
            {% render 'icon-close', size: 24 %}
          </button>
        </div>
        <div class="cart-notification-free-shipping js-cart-notification-free-shipping top-xs pb-8 pt-8">
        </div>
        <div class="cart-notification-product js-cart-notification-panel-content d-flex top-xs mt-16 mb-24">
        </div>

        <div class="cart-notification__links">
          {% if settings.cart_type == 'drawer' %}
            <button type="button"
              onclick="window.cartNotificationPanel.close(); window.shtCartDrawer.openDrawer(document.querySelector('.js-header-cart-status-button'));"
              aria-haspopup="true" aria-expanded="false" aria-controls="shtCartDrawer"
              class="button button--large button--secondary w-100 mb-16">
              {{ "general.cart.view" | t }} (<span class="js-cart-notification-panel-item-count-content"></span>)
            </button>
            <noscript>
              <a href="{{ routes.cart_url }}" class="button button--large button--secondary w-100 mb-16">{{ "general.cart.view" | t }}</a>
            </noscript>
          {% else %}
            <a href="{{ routes.cart_url }}" class="button button--large button--secondary w-100 mb-16">{{ "general.cart.view" | t }} (<span class="js-cart-notification-panel-item-count-content"></span>)</a>
          {% endif %}
          <form
            action="{{ routes.cart_url }}"
            method="post"
            id="cart-notification-form"
          >
            <button
              class="button button--large button--primary w-100 js-cart-notification-panel-button mb-16"
              name="checkout"
            >
              {{ "sections.cart.checkout" | t }}
            </button>
          </form>
        </div>
      </div>
    </div>
  </sht-cart-notification-panel>