
{%-liquid
assign image_element = place_holder
assign image_id = "productGalleryThumb-" | append: section.id | append: "-" | append: thumb_index
assign image_element = media | image_url: width: 130 | image_tag: alt: media.alt, class: 'js-image-lazy w-100 h-100 of-cover', id: image_id
-%}
<sht-horizontal-carousel-item role="listitem" class="gallery__thumb gallery__thumb--{{ media.media_type }} product-slideshow__thumb js-gallery-thumb js-carousel-item horizontal-carousel__item p-relative scrollable-aln-start ta-center d-flex aln-itm-ctr fg-1 fs-0" data-media-target-id="{{ section.id }}-{{ media.id }}">
  <button aria-describedby="{{ image_id }}" aria-label="{{ 'accessibility.open_media_gallery' | t: index: thumb_index }}" aria-controls="zoomContainer-{{ section.id }}" class="js-gallery-button-thumb button-slideshow-thumb p-zero b-zero p-relative" data-target="{{ section.id }}-{{ media.id }}">
    {%- unless media.media_type == 'image' -%}
      {% case media.media_type %}
        {% when 'model' %}
          <span class="slideshow__thumb-icon p-absolute d-flex middle-xs center-xs ">
            {% render 'icon-3d-model' size: 16 %}
          </span>
          {% when 'external_video' %}
          <span class="slideshow__thumb-icon p-absolute d-flex middle-xs center-xs ">
            {% render 'icon-play' size: 16 %}
          </span>
          {% when 'video' %}
          <span class="slideshow__thumb-icon p-absolute d-flex middle-xs center-xs ">
            {% render 'icon-play' size: 16 %}
          </span>
        {% endcase %}
      {%- endunless -%}
    {{ image_element }}
  </button>
</sht-horizontal-carousel-item>

